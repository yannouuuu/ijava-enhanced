{
  "compilerOptions": {
    "module": "commonjs",
  "moduleResolution": "node",
    "target": "es2020",
    "outDir": "out",
    "rootDir": "src",
    "lib": ["es2020"],
    "sourceMap": true,
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "types": ["node", "vscode"]
  },
  "include": ["src"],
  "exclude": ["node_modules", ".vscode-test"]
}
